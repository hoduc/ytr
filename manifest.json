{

  "manifest_version": 2,
  "name": "YTR",
  "version": "1.0",

  "description": "Repeat currently playing youtube video",

  "icons": {
    "48": "icons/repeat-32.png"
  },
  "browser_action":{
    "default_icon":{
      "32" : "icons/ytr_popup-32.png"
    },
    "default_title" : "See What is repeating?",
    "default_popup" : "popup/ytr_popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_scripts/ytr.js"]
    }
  ]

}
